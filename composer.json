{
    "$schema": "https://getcomposer.org/schema.json",
    "name": "karmabunny/kb",
    "description": "Common KB utilities",
    "type": "library",
    "license": "MIT",
    "require": {},
    "require-dev": {
        "phpunit/phpunit": "^9.3",
        "phpstan/phpstan": "^0.12.82"
    },
    "autoload": {
        "psr-4": {
            "karmabunny\\kb\\": "src/"
        }
    },
    "scripts": {
        "tests": "phpunit --testdox tests",
        "publish": "bash scripts/publish.sh",
        "docs": "bash scripts/docs.sh",
        "analyse": "phpstan analyse --level 5 src"
    }
}
